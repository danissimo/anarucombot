# EditorConfig is awesome:
# https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 180

ij_continuation_indent_size = 4
ij_smart_tabs = unset
ij_visual_guides = 80, 120, 150
ij_wrap_on_typing = unset

ij_any_array_initializer_wrap = split_into_lines

[.editorconfig]
ij_editorconfig_spaces_around_assignment_operators = true
ij_editorconfig_space_before_comma = false
ij_editorconfig_space_after_comma = true
ij_editorconfig_space_before_colon = false
ij_editorconfig_space_after_colon = false
ij_editorconfig_align_group_field_declarations = unset

[*.xml]
ij_xml_continuation_indent_size = 4
ij_xml_space_inside_empty_tag = false
ij_xml_space_after_tag_name = false

[*.java]
ij_java_space_after_type_cast = false
ij_java_place_assignment_sign_on_next_line = true
ij_java_binary_operation_sign_on_next_line = true
ij_java_align_multiline_parameters = false
